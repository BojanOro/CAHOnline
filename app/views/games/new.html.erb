<div class="loginContainer">
	<div class="field">
<%= form_for Game.new, url: {action: "create"} do |f| %>
  <%= f.label "Name" %><br>
  <%= f.text_field :name, class:"input" %><br>
  <%= f.label "Password" %><br>
  <%= f.text_field :password, class:"input"  %><br>
  <%= f.label "Max points"  %><br>
  <%= f.text_field :max_points, class:"input"  %><br>
  <%= f.submit "Create Game", class:"btn btn-outline-light loginbutton"  %><br>
<% end %>
</div>
</div>