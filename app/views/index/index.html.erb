<style>

  .card-header, .jumbotron, .navbar{
    background-color: black;
    color: white;
  }

  .btn{
    color:black;
    background-color: white;
    border-color: black;
  }

  .btn:hover{
    color: white;
    background-color: black;
    border-color: black;
  }
</style>

<br><br><br><br>
<section class="jumbotron text-center">
    <div class="container">
      <h1 class="jumbotron-heading">Welcome <%= current_user.email %>, to Cards Against Humanity Online!</h1>
      <p class="lead text-muted">Please select a lobby below to join/rejoin a game.</p>
    </div>
  </section>
<hr>

<div id="games">
  <div class="container">
    <div class="card-deck mb-3 text-center">
    <% Game.all.each do |game| %>
        <% if game.id == current_user.game&.id %>

        <div class="card mb-4 shadow-sm">
          <div class="card-header cahTheme">
            <h4 class="my-0 font-weight-normal">Current game!</h4>
          </div>
          <div class="card-body">
            <ul class="list-unstyled mt-3 mb-4">
              <li>There are _ in game.</li>
            </ul>
            <a href="/games/<%= game.id %>/play">
            <button type="button" class="btn btn-lg btn-block btn-outline-primary">ReJoin</button>
            </a>
          </div>
        </div>

        <% else %>


        <div class="card mb-4 shadow-sm">
          <div class="card-header cahTheme">
            <h4 class="my-0 font-weight-normal">Game: <%= game.id %></h4>
          </div>
          <div class="card-body">
            <ul class="list-unstyled mt-3 mb-4">
              <li>There are _ in game.</li>
            </ul>
            <a href="/games/<%= game.id %>/play">
            <button type="button" class="btn btn-lg btn-block btn-outline-primary">Join</button>
            </a>
          </div>
        </div>




    <% end %>
    <% end %>
    </div>
  </div>
</div>
